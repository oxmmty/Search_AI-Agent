{
  "name": "instacoin",
  "version": "1.0.0",
  "description": "Instacoin user app backend",
  "main": "app.js",
  "scripts": {
    "start": "node --max_old_space_size=8000 ./bins/www.js",
    "dev": "nodemon --max_old_space_size=8000 ./bins/www.js",
    "lint": "eslint '*.js' --quiet --fix",
    "format": "prettier '*.js' --write",
    "lint-fix": "bash fixTab.sh && eslint config controllers models routes --fix",
    "deploy": "pm2 deploy ecosystem.config.json stage --force",
    "test": "jest --verbose=false --silent=false",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Insta-Coin-app/node-backend"
  },
  "keywords": [
    "instacoin",
    "backend"
  ],
  "author": "super",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Insta-Coin-app/node-backend/issues"
  },
  "homepage": "https://github.com/Insta-Coin-app/node-backend#readme",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.750.0",
    "@aws-sdk/client-ses": "^3.758.0",
    "@aws-sdk/client-sesv2": "^3.758.0",
    "@langchain/core": "^0.3.68",
    "@langchain/openai": "^0.6.7",
    "axios": "^1.8.3",
    "cheerio": "^1.1.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^8.5.0",
    "langchain": "^0.3.30",
    "mime-types": "^2.1.35",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.47",
    "mongoose": "^6.8.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.0",
    "playwright": "^1.54.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "uuid": "^11.0.5",
    "xlsx": "^0.18.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-mock-req-res": "^1.0.2",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/__mocks__/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.[jt]sx?$"
  }
}
